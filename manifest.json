{
  "manifest_version": 2,
  "name": "Recipe Scraper",
  "description": "This extension formats a webpage to only include the recipe.",
  "version": "0.5",
  "browser_action": {
    "default_icon": "src/img/recipe-book.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "background": {
    "scripts": [
      "src/background.js",
      "src/functions/processPage.js",
      "src/functions/getPrintUrl.js",
      "src/functions/extractText.js",
      "src/functions/generateFullUrl.js",
      "src/functions/generatePageText.js",
      "src/functions/getPrintElement.js"
    ],
    "persistent": false
    }
}

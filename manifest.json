{
  "manifest_version": 2,
  "name": "Recipe Scraper",
  "description": "This extension formats a webpage to only include the recipe.",
  "version": "0.2",
  "browser_action": {
    "default_icon": "recipe-scraper/img/recipe-book.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "background": {
    "scripts": [
      "recipe-scraper/background.js"
    ],
    "persistent": false
    }
}
